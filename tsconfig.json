{
  "compilerOptions": {
    "noEmit": true,

    "target": "ES2023",
    "module": "NodeNext",
    "moduleResolution": "nodenext",

    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["node_modules", "dist"]
}
